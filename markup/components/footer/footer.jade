            .col-3
                ul.footer__menu
                    li
                        a(href='#').color-white.footer__title: span.color-white__title Каталог продукции
                        ul.footer__menu-small
                            li: a(href='#').color-white: span.color-white__title Коллекторы
                            li: a(href='#').color-white: span.color-white__title Радиаторы
                            li: a(href='#').color-white: span.color-white__title Арматура
                            li: a(href='#').color-white: span.color-white__title Теплоносители
            .col-3
                ul.footer__menu
                    li
                        a(href='#').color-white.footer__title: span.color-white__title Документация
